<div class="w-full">
  <h1 class="font-bold text-4xl">Events [<%= @events.size %>]</h1>
  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 justify-items-center gap-6 mt-4">
    <% @events.each do |event| %>
      <div class="w-full h-52 bg-gray-300 bg-opacity-60 backdrop-blur-xl hover:bg-opacity-90 p-4 border border-gray-400 rounded-md cursor-pointer">
        <p class="text-2xl"><%= event.name %></p>
      </div>
    <% end %>
  </div>
</div>
